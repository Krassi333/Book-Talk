<section class="create-form-container">

    <form action="/book/create" method="post">
        <h3>Create Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" id="title" value="{{data.title}}">
        <label>Author</label>
        <input type="text" name="author" class="box" id="author" value="{{data.author}}">
        <label>Genre</label>
        <input type="text" name="genre" class="box" id="genre" value="{{data.genre}}">
        <label>Stars</label>
        <input type="number" name="stars" class="box" id="stars" value="{{data.stars}}">
        <label>Image</label>
        <input type="text" name="imageUrl" class="box" id="imageUrl" value="{{data.imageUrl}}">
        <label>Review</label>
        <textarea class="box" name="bookReview">{{data.bookReview}}</textarea>
        <input type="submit" value="Create" class="btn">
    </form>
</section>